@using MyCMS.DataLayer.Dto.Users
@model ChangePasswordDto
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}
<div class="container">
    <h2>تغییر رمز عبور</h2>

    <form asp-action="ChangePassword" class="form-signin">
        <div class="form-group">
            <input asp-for="OldPassword" type="password" class="form-control" placeholder="کلمه عبور فعلی">
        </div>
        <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور جدید">
       </div>
        <div class="form-group">
        <input asp-for="RePassword" type="password" class="form-control" placeholder=" تکرار کلمه عبور جدید">
        </div>
        <button class=" btn btn-lg btn-success " type="submit">
            تغییر رمز عبور
        </button>
        <div asp-validation-summary="All" class="text-danger"></div>
     
    </form>
