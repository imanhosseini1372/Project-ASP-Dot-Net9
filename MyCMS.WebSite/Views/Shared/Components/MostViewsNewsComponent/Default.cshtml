
@model IEnumerable<PageShortDto>

<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
     @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImages/@item.PageImg"style="max-width:100px">
                <h2> <a asp-action="ShowPage" asp-controller="Home" asp-route-Id="@item.Id">@item.PageTitle</a></h2>
                <span>انتشار : @item.RegisterDate.ToShamsi()</span>
            </li>
        }
       
    </ul>
</section>