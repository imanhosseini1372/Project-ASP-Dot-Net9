
@model IEnumerable<PageShortDto>

<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>آخرین آخبار ارسالی</h3> </header>
    <ul>
   @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImages/@item.PageImg">
                <h2> <a asp-action="showPage" asp-route-id="@item.Id"> @item.PageTitle </a></h2>
                <p>@item.ShortDesc</p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.RegisterDate.ToShamsi() </span>
                <a href="" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
        
    </ul>
</section>