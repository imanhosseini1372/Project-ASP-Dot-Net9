@using MyCMS.DataLayer.Dto.Users

@model RegisterDto
@{
    Layout = null;
}
@{
    ViewData["Title"] = "ایجاد حساب کاربری";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ایجاد حساب کاربری </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="/css/styleLoginAndSingup.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">ایجاد حساب کاربری</h1>
                <div class="account-wall">
                    <img class="profile-img" src="~/img/Portrait_Placeholder.png" alt="Profile Image">

                    <form asp-action="Register" class="form-signin">
                        <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری"  autofocus>
                        <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل " >
                        <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" >
                        <input asp-for="RePassword" type="password" class="form-control" placeholder=" تکرار کلمه عبور" >
                        <button class=" btn btn-lg btn-success btn-block" type="submit">
                            ثبت نام
                        </button>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <label class="checkbox pull-right">
                            <input type="checkbox" value="remember-me">
                            مرا به خاطر بسپار
                        </label>
                       
                    </form>
                </div>
                <a asp-controller="Account" asp-action="Login" class="text-center new-account">ورود به حساب کاربری </a>
            </div>
        </div>
    </div>

</body>
</html>