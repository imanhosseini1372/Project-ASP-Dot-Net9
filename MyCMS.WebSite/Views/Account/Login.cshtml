@using MyCMS.DataLayer.Dto.Users


@model LoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>صفحه ورود </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="styles.css" asp-append-version="true">

    <link rel="stylesheet" href="/css/styleLoginAndSingup.css" asp-append-version="true" >
</head>
<body>
    
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">ورود به حساب کاربری</h1>
                <div class="account-wall">
                    <img class="profile-img" src="~/img/Portrait_Placeholder.png" alt="Profile Image">

                    <form asp-action="Login" class="form-signin" method="post">
                        <input asp-for="UserNameOrEmail" type="text" class="form-control" placeholder="نام کاربری" required autofocus>
                        <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" required>
                        <button class=" btn btn-lg btn-success btn-block" type="submit">
                            ورود
                        </button>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <label class="checkbox pull-right">
                            <input asp-for="RememberMe" type="checkbox" value="remember-me">
                            مرا به خاطر بسپار
                        </label>

                    </form>
                </div>
                <a asp-controller="Account" asp-action="Register" class="text-center new-account">ایجاد حساب کاربری جدید </a>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-danger center-block"> شما به بخش مورد نظر  دسترسی ندارید لطفا با نام کاربری دارای دسترسی وارد شوید </div>
    }
</body>
</html>